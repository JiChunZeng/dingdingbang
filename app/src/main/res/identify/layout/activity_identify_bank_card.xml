<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b2b2d"
        tools:context="com.dingtaifu.dingdingbang.mvp.identify.view.IdentifyBankCardActivity">

        <RelativeLayout
            android:id="@+id/rl_actionbar"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_fanghui"/>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="339dp"
            android:layout_height="466dp"
            android:layout_below="@id/rl_actionbar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_profile_edit"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="18dp"
                android:text="银行卡信息填写"
                android:textColor="#181818"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#181818"/>

            <RelativeLayout
                style="@style/style_rl_profile_edit"
                android:layout_height="37dp">

                <TextView
                    style="@style/style_profile_tv"
                    android:text="姓名"/>

                <EditText
                    android:id="@+id/et_work_card_name"
                    style="@style/style_profile_et"
                    android:hint="请填写姓名"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/style_rl_profile_edit"
                android:layout_height="37dp">

                <TextView
                    style="@style/style_profile_tv"
                    android:text="身份证号码"/>

                <EditText
                    android:id="@+id/et_card_id_num"
                    style="@style/style_profile_et"
                    android:hint="请填写身份证号码"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/style_rl_profile_edit"
                android:layout_height="37dp">

                <TextView
                    style="@style/style_profile_tv"
                    android:text="储蓄卡号"/>

                <EditText
                    android:id="@+id/et_card_band_id"
                    style="@style/style_profile_et"
                    android:hint="请输入储蓄卡号"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/style_rl_profile_edit"
                android:layout_height="37dp">

                <TextView
                    style="@style/style_profile_tv"
                    android:text="预留手机号"/>

                <EditText
                    android:id="@+id/et_card_phone"
                    style="@style/style_profile_et"
                    android:hint="请输入银行预留手机号"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_finish_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/button4"
            android:text="完 成"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RelativeLayout>
</layout>
