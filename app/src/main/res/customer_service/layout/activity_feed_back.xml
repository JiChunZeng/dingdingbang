<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_background"
        android:orientation="vertical"
        tools:context=".mvp.customer_service.view.FeedBackActivity">

        <include
            android:id="@+id/common_title"
            layout="@layout/layout_common_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            android:background="#1c1529"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_feedback_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="您的宝贵意见，就是我们进步的源泉"
                android:maxLength="200"
                android:padding="10dp"
                android:textColor="@color/color_font_grey"
                android:textColorHint="@color/color_font_grey"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_feedback_text_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="10dp"
                android:text="剩余200字"
                android:textColor="@color/color_font_grey" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_feedback_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#1c1529"
            android:hint="请输入邮箱或QQ，以便于您取得联系"
            android:maxLength="200"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/color_font_grey"
            android:textColorHint="@color/color_font_grey"
            android:textSize="@dimen/text_size_14" />


        <Button
            android:id="@+id/btn_feedback_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/button_login"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>

</layout>