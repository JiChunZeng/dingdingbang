<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_credit_login_appling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_background"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="50dp"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/credit_next_green"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/color_font_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/credit_next_green"
                android:gravity="center"
                android:text="身份验证"
                android:textColor="@color/color_font_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="20dp"
                android:text="获取报告"
                android:textColor="@color/color_font_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:drawablePadding="30dp"
            android:drawableTop="@drawable/credit_login_finish"
            android:text="报告申请中..."
            android:textColor="@color/color_font_grey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_appling_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="征信中心将在24小时内，发送申请结果至您预留的手机号码，收到身份验证码后再来查看"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_appling_received_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="已收验证码"
            android:textColor="@color/color_font_green"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</layout>
